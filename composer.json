{
    "name": "medz/phpwind",
    "type": "project",
    "description": "采用PHP+MySQL方式运行的开源社区程序",
    "keywords": ["medz", "php", "phpwind"],
    "homepage": "http://www.phpwind.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Seven Du",
            "homepage": "http://medz.cn"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "medz/windframework": "^1.0",
        "guzzlehttp/guzzle": "^6.2",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database",
            "phpwind9/src/Wekit.php",
            "phpwind9/src/library/",
            "phpwind9/src/service/",
            "phpwind9/src/bootstrap/",
            "phpwind9/src/hooks/"
        ],
        "psr-4": {
            "Medz\\Wind\\": "src/",
            "Pw\\Ext\\": "src/extensions/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php fans key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php fans optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php fans optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
